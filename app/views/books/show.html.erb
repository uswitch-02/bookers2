<div>
  <p>Title: <%= @book.title %></p>
  <p>opinion: <%= @book.body %></p>
  <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
  <p>name:<%= @book.user.name %></p>
  <% if @book.user == current_user %>
    <%= link_to "destroy", books_path(@book), method: :delete %>
  <% end %>
</div>

 <h4>New book</h4>
  <%= form_with model: @book_new do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>

<% end %>